@model Curso

@{
    ViewData["Title"] = "Borrado de Curso";
}

<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="All" style="color: red;" ></div>
<form method="POST">
    <div>
        <label asp-for="Nombre" ></label>
        <input asp-for="Nombre"/>
    </div>
    <div>
        <label asp-for="Dirección" ></label>
        <input asp-for="Dirección"/>
    </div>
    <div>
        <label asp-for="Jornada" ></label>    
        @Html.DropDownList(
            "Jornada", Html.GetEnumSelectList<TiposJornada>(),"Seleccione", new {@class="form-control"}
        )
    </div>
    <input type="submit"/>
</form>

<p><i>@ViewBag.Fecha</i></p>